// https://aka.ms/devcontainer.json
{
	"name": "Mars development",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "mars_dev",
	"workspaceFolder": "/workspace/mars",
	"customizations": {
		"vscode": {
			"settings": {
				"php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer"
			},
			"extensions": [
				"junstyle.php-cs-fixer"
			]
		}
	},
	"remoteUser": "ubuntu",
	"postCreateCommand": "make build"
	// "forwardPorts": [],
	// "runServices": [],
	// "shutdownAction": "none",
}